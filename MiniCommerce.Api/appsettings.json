{
  "AllowedHosts": "*",
  "MockDb": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "Loggers": {
    "SeriLog": {
      "Using": [
        "Serilog.Sinks.Console",
        "Serilog.Sinks.File"
      ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning"
        }
      },
      "Enrich": [
        "FromLogContext",
        "WithMachineName",
        "WithProcessId",
        "WithThreadId"
      ],
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "formatter": "Serilog",
            "formatterArgs": {
              "indent": true
            }
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "Logs/log-.json",
            "rollingInterval": "Day",
            "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
            "formatterArgs": {
              "indent": true
            }
          }
        }
      ],
      "Properties": {
        "Application": "API"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=37310;Database=mini_commerce;Username=user;Password=password"
  },
  "Queues": {
    "RabbitMQ": {
      "Host": "localhost",
      "Port": 37320,
      "Queue": "order-placed",
      "User": "user",
      "Password": "password"
    }
  },
  "Caches": {
    "Redis": {
      "Host": "localhost",
      "Port": 37330
    }
  }
}
